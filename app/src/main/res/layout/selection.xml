<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:andorid="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.walkin.MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="#9affffff">

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f3e8e8"
            android:weightSum="1">

            <EditText
                android:id="@+id/depart"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:hint="depart"
                android:inputType="numberDecimal"
                android:textSize="30dp"
                android:text="depart"
                android:background="#9fccf7"
                android:gravity="center_horizontal"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:password="false"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp" />
            <Button
                android:id="@+id/btn_depart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dep"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="30dp"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:background="#f4daee" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f3e8e8"
            android:weightSum="1">

            <EditText
                android:id="@+id/arrivee"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:hint="arrivee"
                android:inputType="numberDecimal"
                android:textSize="30dp"
                android:text="arrivee"
                android:background="#9fccf7"
                android:gravity="center_horizontal"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:password="false"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp" />
            <Button
                android:id="@+id/btn_arrivee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dep"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:background="#f4daee" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            android:background="#f3e8e8">


            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:layout_weight="5.01"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="150dp"
                android:textSize="25sp"
                android:background="#ccc3ca"
                android:gravity="center_vertical|center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="387dp"
        android:layout_height="271dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#059eaf"></RelativeLayout>




</LinearLayout>