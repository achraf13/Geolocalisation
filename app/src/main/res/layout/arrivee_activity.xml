<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/arrivee_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/btn_retour"
            android:background="@drawable/arrivee_return"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:background="@drawable/arrivee_search"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:id="@+id/relativeLayout2"
        android:layout_marginBottom="-8dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="ArrivÃ©e..."
            android:id="@+id/editText1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp"
            android:textIsSelectable="false"
            android:textSize="15dp"
            android:background="#00ffffff"
            android:textColorHint="#c3c3c3" />

        <Button
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:id="@+id/button"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/editText1"
            android:background="@drawable/arrivee_close" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayout3"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listView1" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout3"
        android:background="#1f8b73">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/btn_info"
            android:background="@drawable/info"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp" />
    </RelativeLayout>

</RelativeLayout>